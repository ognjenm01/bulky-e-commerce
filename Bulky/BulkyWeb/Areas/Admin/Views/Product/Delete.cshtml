@model Product

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="ISBN" class="p-0"></label>
			<input disabled asp-for="ISBN" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Title" class="p-0"></label>
			<input disabled asp-for="Title" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Description" class="p-0"></label>
			<input disabled asp-for="Description" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Author" class="p-0"></label>
			<input disabled asp-for="Author" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="ListPrice" class="p-0"></label>
			<input disabled asp-for="ListPrice" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price" class="p-0"></label>
			<input disabled asp-for="Price" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price50" class="p-0"></label>
			<input disabled asp-for="Price50" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price100" class="p-0"></label>
			<input disabled asp-for="Price100" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
			</div>
		</div>

	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}