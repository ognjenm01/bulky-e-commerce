@model ProductVM

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.ISBN" class="p-0"></label>
			<input disabled asp-for="Product.ISBN" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Title" class="p-0"></label>
			<input disabled asp-for="Product.Title" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Description" class="p-0"></label>
			<input disabled asp-for="Product.Description" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Author" class="p-0"></label>
			<input disabled asp-for="Product.Author" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.ListPrice" class="p-0"></label>
			<input disabled asp-for="Product.ListPrice" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Price" class="p-0"></label>
			<input disabled asp-for="Product.Price" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Price50" class="p-0"></label>
			<input disabled asp-for="Product.Price50" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.Price100" class="p-0"></label>
			<input disabled asp-for="Product.Price100" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.ImageUrl" class="p-0"></label>
			<input disabled asp-for="Product.ImageUrl" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Product.CategoryId" class="p-0"></label>
			<select disabled asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
				<option disabled selected>--Select Category--</option>
			</select>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
			</div>
		</div>

	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}